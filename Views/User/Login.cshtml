@model WebApplication3.Models.User

@{
    ViewData["Title"] = "Login";
}
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <link href="https://fonts.googleapis.com/css?family=Staatliches&display=swap" rel="stylesheet">


        <link rel="stylesheet" href="Css/fontawesome.min.css">
        <link rel="stylesheet" href="Css/bootstrap.min.css">
        <link rel="stylesheet" href="Css/main.css">


        <title>Ucuza Git.kon</title>
    </head>
    <body>
       
        <h1>Kullanıcı Giriş</h1>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Kullanici_Lakap" class="control-label">Lakap</label>
                        <input asp-for="Kullanici_Lakap" class="form-control" />
                        <span asp-validation-for="Kullanici_Lakap" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Kullanici_Sifre" class="control-label">Şifre</label>
                        <input asp-for="Kullanici_Sifre" class="form-control" />
                        <span asp-validation-for="Kullanici_Sifre" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Giriş Yap" class="btn btn-primary" />
                    </div>
                    <div>
                        <h4 style="color:darkred">@Html.ViewData["Message"]</h4>

                        <h4 style="color:forestgreen">@Html.ViewData["Success"]</h4>
                    </div>
                </form>
            </div>
        </div>
        <a href="./Edit">Bilgilerimi Güncelle</a>


        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
    </body>
</html>
